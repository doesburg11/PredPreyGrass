.ImageBase
{
    border-width: 2px;
    border-color: lightslategrey;
}

.ImageBase.IsDuplicate
{
    border-width: 3px;
    border-color: firebrick;
}

#Region.RegionHover.PointerHover {
    border-color: rgba(255, 255, 255, 1.0);
    border-width: 2px;
    opacity: 0.7;
}

#Region.RegionHover.Clicked {
    background-color: rgba(255, 0, 0, 1.0);
}

#Region.RegionHover {
    opacity: 0.4;
    border-width: 2px;
    flex-grow: 0.9;
}