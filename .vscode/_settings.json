{
    "flake8.args": ["--max-line-length=200"],
    "python.linting.pylintArgs": ["--disable=line-too-long"],
    // Use a clean bash that doesn't source user rc files; prevents conda base auto-activation
    "terminal.integrated.profiles.linux": {
        "Clean Bash (no rc)": {
            "path": "bash",
            "args": ["--noprofile", "--norc"]
        },
        "bash": {
            "path": "bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "Clean Bash (no rc)",
    // Custom command removed: no auto_conda_rc sourcing
    "python.analysis.extraPaths": [
        "./src",
        "./src"
    ],
    "cSpell.words": [
        "matplot",
        "predpreygrass",
        "pygame",
        "rllib"
    ]
}
