{
    "flake8.args": ["--max-line-length=200"],
    "python.linting.pylintArgs": ["--disable=line-too-long"],
    // Ensure VS Code uses the project Conda env's interpreter
    "python.defaultInterpreterPath": "/home/doesburg/Projects/PredPreyGrass/.conda/bin/python",
    // Always activate this environment in new terminals
    "python.terminal.activateEnvironment": true,
    // Inject env vars so we can self-heal if conda deactivates
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "/home/doesburg/Projects/PredPreyGrass/src:${env:PYTHONPATH}",
        "PROJECT_CONDA_PREFIX": "/home/doesburg/Projects/PredPreyGrass/.conda"
    },
    // Run a tiny shell snippet on terminal creation to (re)activate env if not active
    // This uses bash PROMPT_COMMAND so every prompt enforces the env.
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    // Custom command removed: no auto_conda_rc sourcing
    "python.analysis.extraPaths": [
        "./src"
    ],
    "cSpell.words": [
        "matplot",
        "predpreygrass",
        "pygame",
        "rllib"
    ]
}
